{
    "manifest_version": 3,
    "name": "Snippet Viewer",
    "version": "1.0",
    "description": "Affiche les extraits de texte (snippets) sur la SERP.",
    "permissions": [
      "scripting",
      "activeTab",
      "storage"
    ],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png"
      }
    },
    "host_permissions": [
      "*://www.google.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    }
  }